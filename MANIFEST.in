# $Id: MANIFEST.in,v 1.5 2003/11/26 15:06:32 stefan Exp $
#
# MANIFEST template for source distribution generation
#

include COPYING README MANIFEST.in setup.py autogen.sh

# python modules
recursive-include   Synopsis *.py

# C/C++ extensions
recursive-include   Synopsis/Parsers/C *
recursive-include   Synopsis/Parsers/Cxx *

# data files (compiled documentation etc.)
recursive-include   share *

# documentation (source)
recursive-include   doc *
recursive-include   demo *

# scripts
include             bin/*

# suppress CVS bookkeeping stuff
global-exclude */CVS/*
