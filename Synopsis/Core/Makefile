SHELL	:= /bin/sh

include ../local.mk

SRC	:= __init__.py __init__.pyc Type.py Type.pyc AST.py AST.pyc Util.py Util.pyc 

all:
clean:
	/bin/rm -f *~

distclean:      clean
	/bin/rm -f *.pyc

install:
	mkdir -p $(packagedir)/Synopsis/Core
	install $(SRC) $(packagedir)/Synopsis/Core
