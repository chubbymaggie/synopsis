SHELL	:= /bin/sh

srcdir	:= @srcdir@

PYTHON	:= @PYTHON@

CC	:= @CC@
CXX	:= @CXX@
MAKEDEP	:= $(CXX) -M
CPPFLAGS:= @CPPFLAGS@ -I $(srcdir) -I @PYTHON_INCLUDE@
CFLAGS	:= @CFLAGS@
CXXFLAGS:= @CXXFLAGS@
LDFLAGS	:= @LDFLAGS@
LIBS	:= @LIBS@ -lpthread
LIBRARY_EXT := @LIBEXT@

UCPP_FLAGS:= -DSYNOPSIS -DSTAND_ALONE -DAUDIT -DMEM_CHECK
UCPP_AFLAGS:= -DSTAND_ALONE -DAUDIT -DMEM_CHECK

UCPP_LIB	:= ucpp/ucpp.a
UCPP_GLIB:= ucpp/ucpp.ga
UCPP_SO	:= ucpp$(LIBRARY_EXT)

FILES		:= mem hashtable cpp lexer assert macro eval

# Generate sources, objs and debug-objs from the FILES
SRC		:= $(patsubst %, ucpp/%.c, $(FILES))
OBJ		:= $(patsubst %, ucpp/%.o, $(FILES))
GOBJ		:= $(patsubst %, ucpp/%.go,$(FILES))
AOBJ		:= $(patsubst %, ucpp/%.ao,$(FILES))

TARGET		:= $(UCPP_SO)

vpath %.c $(srcdir)
vpath %.h $(srcdir)

all: $(TARGET)

%.o : %.c
	$(CC) $(CPPFLAGS) $(CFLAGS) $(UCPP_FLAGS) $(OPTIMISE) -c -o $@ $<

%.go : %.c
	$(CC) $(CPPFLAGS) $(UCPP_FLAGS) $(CFLAGS) $(DEBUG) -c -o $@ $<

%.ao : %.c
	$(CC) $(CPPFLAGS) $(UCPP_AFLAGS) $(CFLAGS) $(DEBUG) -c -o $@ $<

ucpp:		$(AOBJ)
	$(CC) -o $@ $^

$(UCPP_SO): $(UCPP_LIB)
	$(CC) -shared $(LDFLAGS) -o $@ $^ $(LIBS)

$(UCPP_LIB): $(OBJ)
	ar rcs $@ $^

$(UCPP_GLIB): $(GOBJ)
	ar rcs $@ $^

clean :
	rm -f *~ ucpp/*.o ucpp/*.go ucpp/*.a ucpp/*.ga \
        $(UCPP_SO) ucpp/*.ao occ/*.o occ/*.go *.pyc *.pyo .deps.* base_lib
